provider [icon: user, typeface: mono, color: orange] {
  categories category[]
  description string
  email_address string[]
  equipments equipment[]
  id string pk
  invoices invoice[]
  name string
  orderm_items order_item[]
  phone string[]
  product_prices product_price[]
  products product[]
  rfc string
}

product [icon: package, color: blue]{
  bar_code number
  category category
  id string pk
  measure_unit string
  name string
  order_items order_item[]
  product_prices product_price[]
  providers provider[]
  stock number
}

product_price [icon: money, color: green]{
  min_unit number
  price number
  product product
  provider provider
}

category [icon: grid, color: green] {
  id string pk
  name string
  product product
  provider provider
}

equipment [icon: package, color: blue]{
  id string pk
  name string
  price string
  providers provider[]
  stock number
}

order [icon: truck, color:orange] {
  completion_date date
  created_at date
  delivery_date date
  id string pk
  invoices invoice[]
  items order_item[]
  order_status string
  request_notes string
  restaurant restaurant
  total_items number 
  total_price number
  user user
  warehouse_notes string
}

order_item [icon: shopping-cart, color:blue]{
  id string pk
  order order
  price_at_order number
  product product
  provider provider
  quantity_delivered number
  quantity_requested number
}

invoice [icon: credit-card, color:blue]{
  created_at date
  filename string
  id string pk
  notes string
  order order
  payment_date date
  payment_method string
  provider provider 
  total_price number
}

restaurant [icon: aws-location, color:green]{
  id string package
  location string
  name string
  order order
}


order.invoices > invoice.order
order.items > order_item.order
order.restaurant - restaurant.order
order_item.product < product.order_items


product.providers <> provider.products
provider.equipments <> equipment.providers
product_price.product < product.product_prices
product_price.provider < provider.product_prices

invoice.provider < provider.invoices
order_item.provider < provider.orderm_items

provider.categories > category.provider

product.category - category.product
