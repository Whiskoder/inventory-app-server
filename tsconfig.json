{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ESNext"], // Include typings for DOM and latest ECMAScript features
    "module": "commonjs", // Use ES modules
    "moduleResolution": "node", // Use Node.js module resolution mechanism
    "noFallthroughCasesInSwitch": true, // Report errors for fallthrough cases in switch statement
    "noImplicitReturns": true, // Report error when not all code paths in function return a value
    "outDir": "./dist",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"],
      "@presentation/*": ["src/presentation/*"],
      "@domain/*": ["src/domain/*"],
      "@db/*": ["src/databases/*"]
    },
    "resolveJsonModule": true, // Allow importing .json files
    "rootDir": "./src",
    "skipLibCheck": true, // Skip type checking of all declaration files (*.d.ts)
    "strict": true, // Enable all strict type-checking options
    "target": "es2016", // Compile to latest ECMAScript version
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
